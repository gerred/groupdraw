@import "css/bootstrap.min.css"

body
  .block
    width: 16px
    height: 16px
    border: 1px solid black
    margin-right: 5px
    display: inline-block
    &.red
      background-color: red
    &.green
      background-color: green
    &.blue
      background-color: blue
    &.black
      background-color: black
    &.white
      background-color: white
  canvas
    border: 1px solid black
    margin-top: 20px
  background: url(img/first_aid_kit.png)
  .container
    color: #444
    background: white
    margin-top: 40px
    margin-bottom: 40px
    padding: 40px 0 0
    border: 1px solid #999
    header
      h1
        text-align: center
        font-size: 76px
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.15)
        line-height: 76px

section
  text-align: center
  padding: 0 0 70px
  &:last-child
    padding: 0 0 40px
  > h1
    text-align: center
    padding-bottom: 10px
    border-bottom: 1px #DDD solid
    margin: 0px 100px 25px
  .location
    padding-top: 35px
    address
      font-size: 18px
      margin-bottom: 5px
    small
      font-size: 12px
      color: #666
    h3
      margin-top: 20px
    p.time
      font-size: 18px
    img
      border: 1px solid black
ul.people
  > li
    border: 1px solid #DDD
    padding: 5px
    border-radius: 5px
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075)
    margin-bottom: 15px
    a
      display: inline-block

  ul
    li
      display: inline-block
      padding-right: 10px

footer
  text-align: center
  a
    font-size: 11px
    padding: 0
    margin: 0
  img
    position: fixed
    bottom: 5px
    right: 5px